public class Solution {  

    public static void sortZeroesAndOne(int[] arr) {
    	
        int count=0;
        
        for(int i=0; i<arr.length; i++){
            if(arr[i]==0){
                count++;
            }
            
        }
           
            for(int j=0; j<count; j++){
                arr[j]=0;
            }
            
            for(int j=count; j<arr.length; j++){
                arr[j]=1;
            }
        
    }
}
