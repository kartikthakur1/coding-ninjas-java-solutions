
public class Solution {

  public static String reverseEachWord(String str) {
      String ans ="";
      String w ="";
      str=str+" "; 
      for(int i=0; i<str.length(); i++){
          if(str.charAt(i)!=' '){
              w=str.charAt(i)+w;
          }
          else{
              ans=ans+w+" ";
              w="";
          }
      }
      return ans;
      
  }    

}
